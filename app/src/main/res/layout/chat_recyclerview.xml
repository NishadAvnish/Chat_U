<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/rectangle"
        android:id="@+id/othersll"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/othertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="time"
            android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/otherdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Date"
                android:layout_marginLeft="15dp"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/othermsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:text="MSfdDfsfdsfdhgfhgfhgfhvhgvhgfhgfhgfhgfgfvhgfhgg"
            android:textSize="25sp"
            />
         <TextView
             android:id="@+id/othername"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="25dp"
             android:text="name"
             android:textSize="15sp"
             android:layout_gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/rectangle"
        android:id="@+id/ownll"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/owntime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="time"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/owndate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Date"
                android:textSize="15sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/ownmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:text="MSfdDf"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/ownname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Name"
            android:textSize="15sp"
            android:layout_gravity="right"/>
    </LinearLayout>

    </FrameLayout>


</LinearLayout>
